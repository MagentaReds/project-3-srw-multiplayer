</head>

<body>

  <!-- Header -->
  <a name="about"></a>
  <div class="intro-header">
    <div class="container">

      <div class="row">
        <div class="col-lg-12">
          <div class="intro-message">
            <h1>Super Robot Wars</h1>
            <h3>Tactical Role-Playing Game</h3>
            <hr class="intro-divider">
            <div class="welcome">
              <h2>Welcome <%= name?`, ${name}!`:""; %></h2>
            </div>
            <ul id="intro-social-buttons" class="list-inline intro-social-buttons">
              <% if (authed) { %>
                <li>
                  <a id='btn-login' class="btn btn-default btn-lg" onclick="location.href='./profile'">Profile</span></a>
                </li>
                <li>
                  <a id='btn-login' class="btn btn-default btn-lg" onclick="location.href='./game'">Game Lobby</span></a>
                </li>
                <li>
                  <a id='btn-login' class="btn btn-default btn-lg" onclick="location.href='./logout'">Logout</span></a>
                </li>
              <% } %>
              <% if (!authed) { %>
                <li>
                  <a id='btn-login' class="btn btn-default btn-lg" onclick="location.href='./login'">Login</span></a>
                </li>
                <li>
                  <a id='btn-login' class="btn btn-default btn-lg" onclick="location.href='./createaccount'">Create Account</span></a>
                </li>
              <% } %>
            </ul>
          </div>
        </div>
      </div>

    </div>
    <!-- /.container -->

  </div>
  <!-- /.intro-header -->

  <!-- Page Content -->

  <a name="services"></a>
  <div class="content-section-a">

    <div class="container">
      <div class="row">
        <div class="col-lg-5 col-sm-6">
          <hr class="section-heading-spacer">
          <div class="clearfix"></div>
          <h2 class="section-heading">Check out this awesome screenshot</h2>
          <p class="lead">A special thanks to generic description about this awesome screenshot</p>
        </div>
        <div class="col-lg-5 col-lg-offset-2 col-sm-6">
          <img class="img-responsive" src="img/ipad.png" alt="">
        </div>
      </div>

    </div>
    <!-- /.container -->

  </div>
  <!-- /.content-section-a -->

  <div class="content-section-b">

    <div class="container">

      <div class="row">
        <div class="col-lg-5 col-lg-offset-1 col-sm-push-6  col-sm-6">
          <hr class="section-heading-spacer">
          <div class="clearfix"></div>
          <h2 class="section-heading">Maybe you're into this dope screenshot</h2>
          <p class="lead">Generic description about this dope screenshot you're maybe into</p>
        </div>
        <div class="col-lg-5 col-sm-pull-6  col-sm-6">
          <img class="img-responsive" src="img/dog.png" alt="">
        </div>
      </div>

    </div>
    <!-- /.container -->

  </div>
  <!-- /.content-section-b -->

  <div class="content-section-a">

    <div class="container">

      <div class="row">
        <div class="col-lg-5 col-sm-6">
          <hr class="section-heading-spacer">
          <div class="clearfix"></div>
          <h2 class="section-heading">This screenshot is definitely the best</h2>
          <p class="lead">Generic description about this screenshot that is definitely the best</p>
        </div>
        <div class="col-lg-5 col-lg-offset-2 col-sm-6">
          <img class="img-responsive" src="img/phones.png" alt="">
        </div>
      </div>

    </div>
    <!-- /.container -->

  </div>
  <!-- /.content-section-a -->

  <a name="contact"></a>
  <div class="banner">

    <div class="container">

      <div class="row">
        <div class="col-lg-6">
          <h2>Check out the code:</h2>
        </div>
        <div class="col-lg-6">
          <ul class="list-inline banner-social-buttons">
            <li>
              <a href="https://github.com/MagentaReds/project-3-srw-multiplayer" class="btn btn-default btn-lg"><i class="fa fa-github fa-fw"></i> <span class="network-name">Github</span></a>
            </li>
          </ul>
        </div>
      </div>

    </div>
    <!-- /.container -->

  </div>
  <!-- /.banner -->

  <!-- jQuery -->
  <script src="js/jquery.js"></script>

  <!-- Bootstrap Core JavaScript -->
  <script src="js/bootstrap.min.js"></script>


</body>

</html>